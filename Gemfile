source 'http://ruby.taobao.org'

gemspec

group :development, :test do
  # rake tasks
  gem 'rake'

  # parse html & xml
  gem 'nokogiri'

  # rspec and guard
  gem 'rspec', '~> 2.12.0'
  gem 'guard', '~> 2.8.2'
  gem 'guard-rspec'

  # mock HTTP
  gem 'webmock'

  # coverage
  gem 'simplecov', require: false
  gem 'coveralls', require: false
end

gem 'fastimage', github: 'forresty/fastimage', branch: 'proxy-option'
