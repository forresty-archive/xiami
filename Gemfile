source 'http://ruby.taobao.org'

gemspec

group :development, :test do
  # rake tasks
  gem 'rake'

  # parse html & xml
  gem 'nokogiri'

  # rspec and guard
  gem 'rspec', '~> 3.0'
  gem 'guard'
  gem 'guard-rspec'

  # mock HTTP
  gem 'webmock'

  # coverage
  gem 'coco', require: false
  gem 'coveralls', require: false
end

gem 'fastimage', '~> 1.6.8'
